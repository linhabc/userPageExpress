extends ../layout/common

block content 
	h2 User
	.d-flex.justify-content-between.align-items-baseline
		a.btn.btn-primary(href='/users/create') Create User
		form.form-inline(action="/users/search", method="GET")
				input.form-control(type="text", name="q", value="")
				button.btn.btn-primary Search

	table.table
		thead
			tr
				th Name
				th Phone
				th Action
		tbody
		each user in users
			tr
				td=user.name
				td=user.phone
				td
					a.btn.btn-light(href='/users/' + user.id) View
